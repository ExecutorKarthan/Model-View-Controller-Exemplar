<div class="dashboard">
    <section class="flex-row justify-center">
        {{#if makePost}}
            {{> create-post}}
        {{else}}
            {{#each posts as |post|}}
                {{> dashboard-post}}
            {{/each}} 
        {{/if}}
    </section>
    <button type="click" class="btn btn-primary" id="new-post-form">+ New Post</button>
</div>
<script src="./js/dashboard.js"></script>
