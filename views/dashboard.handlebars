<div class="dashboard">
    <section class="flex-row justify-center">
        {{#if makePost}}
            {{> post-form}}
        {{else}}
            {{#each post as |post|}}
                {{> single-post}}
            {{/each}}
        {{/if}}
    </section>
    <button type="click" class="btn btn-primary" id="new-post-form">+ New Post</button>
</div>
<script src="./js/dashboard.js"></script>
