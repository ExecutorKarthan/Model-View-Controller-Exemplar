{{!-- Create a header to load bootstrap and handlebars --}}
<head>
  <meta charset="UTF-8">
  <title>Alex's Tech Blog</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>
  <div class="container">
    {{!-- Create a navigation bar from a single row --}}
    <nav class="row">
        <div class = "row" id="nav-bar">
          {{!-- Create a link for the homepage --}}
          <div class = "col">
            <a href="/"> Home </a>
          </div>
          {{!-- Create a link for the dashboard --}}
          <div class = "col">
            <a href="/dashboard"> Dashboard </a>
          </div>
          <div class = "col">
            {{!-- Create a link for the login and logout links --}}
            {{!-- Use handlebar logic to make the links change --}}
            {{#if loggedIn}}
              <button id="logout" class="btn-no-style" id="logout">Logout</button>
            {{else}}
              <a href="/login" class = "col" id="login"> Login </a>
            {{/if}}
          </div>
        </div>  
      <div class = "row">
        <h1>Code Corner</h1>
      </div>
    </nav>
    <main class="container">
      {{!-- Render the rest of the templates --}}
      {{{ body }}}
    </main>
  </div>
  <footer>
  </footer>
  {{!-- Load the logout script if the user is logged in --}}
  {{#if loggedIn}}
  <script src="/js/logout.js"></script>
  {{/if}}
</body>