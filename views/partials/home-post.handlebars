<section class="card">
  <div class = "row">
    <div class="col-md" id="name">
        <a href="/post/{{id}}">{{title}}</a>
    </div>
    <div class="col-auto" id="date">
        <p>Posted by {{user.username}} on {{formatDate posted_date}}</p>
    </div>
  </div>
  <div class = "row" id="body">
    <h2>{{body}}</h2>
  </div>
</section>
<br>